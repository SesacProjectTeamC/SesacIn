<style>
  .cHeader {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 10px;
    margin-bottom: 10px;
  }
  a {
    text-decoration-line: none;
    color: black;
    font-weight: 700;
  }
</style>

<div class="cHeader">
  <a href="/">
    <img src="/static/img/logo.png" alt="logo" class="logo" height="45px" />
  </a>
  <div>
    <% if ( isLogin == true ) { %>
    <a onclick="moveToMakePost()" style="margin-right: 5px; cursor: pointer"
      >새 글 쓰기</a
    >
    <a onclick="logout()" style="margin-right: 5px; cursor: pointer"
      >로그아웃</a
    >
    <a href="/users/profile">마이페이지</a>
    <% } else { %>

    <a href="/login">로그인</a>

    <% } %>
  </div>
  <script>
    function logout() {
      axios({
        method: "POST",
        url: "/logout",
      })
        .then((res) => {
          console.log("로그아웃 요청 성공");
          window.location.reload();
        })
        .catch((err) => {
          console.log("로그인 요청 실패", err);
        });
    }

    const moveToMakePost = () => {
      window.location.href = "/board/create";
    };
  </script>
</div>
