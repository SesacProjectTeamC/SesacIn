<!DOCTYPE html>
<html lang="ko">
  <head>
    <!-- axios cdn -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
    <p>ID 수정 불가능, Password, Name 수정 가능</p>

    <form name="form_profile">
      <p>UserID: <%= userData.uId %></p>
      <label for="pw">Password</label>
      <input id="pw" type="password" name="pw" value="" required /><br />
      <label for="uName">Name</label>
      <input id="uName" type="text" name="uName" value="" required /><br />
      <button type="button" onclick="profileEdit();">Edit</button>
      <button type="button" onclick="profileDelete();">Delete</button>
    </form>

    <script>
      // TODO: [Login] 버튼 클릭시 서버에 회원 정보 수정 요청하기
      // POST /user/profile/edit
      function profileEdit() {
        const form = document.forms['form_profile'];

        if (!form.pw.value) {
          alert('비밀번호를 입력헤주세요');
        } else if (!form.uName.value) {
          alert('이름을 입력헤주세요');
        } else {
          axios({
            method: 'PATCH',
            url: `/editprofile`,
            data: {
              pw: form.pw.value,
              uName: form.uName.value,
            },
          })
            .then((result) => {
              alert('회원 정보 수정 성공');
            })
            .catch((err) => {
              console.log(err);
            });
        }
      }

      function profileDelete() {
        if (confirm('정말 삭제 하시겠습니까?')) {
          axios({
            method: 'DELETE',
            url: '/deleteprofile',
          })
            .then((result) => {
              alert('삭제되었습니다.');
              // document.location.href = '/';
            })
            .catch((err) => {
              console.log(err);
            });
        }
      }
    </script>
  </body>
</html>
